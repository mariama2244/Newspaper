{% extends 'base.html.twig' %}

{% block title %}Voir les archives{% endblock %}

{% block body %}

    <h1 class="text-center my-3 text-warning">Les Archives</h1>

    {# ################# FLASHES ################# #}
    <div class="row">
        <div class="col-6 mx-auto">
            {% include 'include/_flashes.html.twig' %}
        </div>
    </div>
    {# ################# FLASHES ################# #}

    {# -------------------------------------------------------------------------------------------------- #}

    {# ################# BUTTONS ################# #}
    <div class="row my-5 mx-auto">
        <div class="col-4">
            <a class="btn btn-sm btn-outline-dark" href="{{ path('show_dashboard') }}"><i class="bi bi-arrow-left-circle"></i> Retour au tableau de bord</a>
        </div>
    </div>
    {# ################# BUTTONS ################# #}

    {# -------------------------------------------------------------------------------------------------- #}

    {# ################# TABLE 1 ################# #}
    <div class="row">
        <div class="col-10 mx-auto my-4">

            <h2 class="text-center">Tous les articles archivés</h2>

            <table class="table">
              
              <thead>
                  <tr class="text-center">
                      <th>#</th>
                      <th>Titre</th>
                      <th>Categorie</th>
                      <th>Photo</th>
                      <th>Auteur</th>
                      <th>Commenté</th>
                      <th>Créé le</th>
                      <th>Modifié le</th>
                      <th>Actions</th>
                  </tr>
              </thead>
              <tbody>

                 {% for article in articles %}

                   <tr class="text-center align-middel">
                      
                       <td>{{ article.id }}</td>
                       <td>{{ article.title | length > 20 ? article.title | slice(0,20) ~ '...' : article.title }}</td>
                       <td>{{ article.category.name }}</td>
                       <td><img width="150" length="150" class="img-fluid" src="{{ asset('uploads/' ~ article.photo)}}" alt="{{ article.title}}"></td>
                       <td>{{ article.author.fullname }}</td>
                       <td>{{ article.commentaries is empty ? 'Non' : 'Oui' }}</td>
                       <td>{{ article.createdAt | date('d/m/Y') }}</td>
                       <td>{{ article.deletedAt | date('d/m/Y') }}</td>
                       <td>
                         <a href="{{ path('restore_article',{'id': article.id}) }}" class="btn btn-sm btn-info" title="Modifier"><i class="bi bi-reply-all-fill"></i></a>
                         <a href="{{ path('hard_delete_article',{'id': article.id}) }}" onclick="return confirm('Voulez-vous vraiment supprimer définitivement cette article?')" class="btn btn-sm btn-danger" title="Archiver"><i class="bi bi-trash3"></i></a>
                       </td>
                   </tr>

                 {% endfor %}
              </tbody>
            </table>


        </div>
    </div>
    {# ################# TABLE 1 ################# #}

    {# -------------------------------------------------------------------------------------------------- #}

    <div class="row">
        {# ################# TABLE 2 ################# #}
        <div class="col-6">

            <h2 class="text-center">Toutes les catégories archivées</h2>

             <table class="table">
               <thead>
                  <tr>
                    <th>#</th>
                    <th>Nom</th>
                    <th>Alias</th>
                    <th>Crée le</th>
                    <th>Actions</th>
                  </tr>
               </thead>
               <tbody>

                  {% for category in categories %}

                  <tr class="text-center">
                    <td>{{ category.id }}</td>
                    <td>{{ category.name }}</td>
                    <td>{{ category.alias }}</td>
                    <td>{{ category.createdAt | date('d/m/Y') }}</td>
                    <td> 
                      <a href="{{ path('restore_category', {'id': category.id}) }}" class="text-info" title="Restaurer la catégorie"><i class="bi bi-reply-all-fill"></i></a>
                      <a href="{{ path('hard_delete_category', {'id': category.id}) }}" class="text-danger" title="Supprimer définativement la categorie" onclick="return confirm(Vous voulais)"><i class="bi bi-x-circle"></i></a>
                    </td>
                  </tr>

                  {% endfor %}
               </tbody>
               </table>

        </div>
        {# ################# TABLE 2 ################# #}

        {# -------------------------------------------------------------------------------------------------- #}

        {# ################# TABLE 3 ################# #}
        <div class="col-6">
            <h2 class="text-center">Tous les utilisateurs archivés</h2>

        </div>
        {# ################# TABLE 3 ################# #}
    </div>

    {# -------------------------------------------------------------------------------------------------- #}

{% endblock %}