{% extends 'base.html.twig' %}

{% block title %}Accueil | Newspaper
{% endblock %}

{% block body %}

	<h1 class="text-center my-4">Article à la Une</h1>

	<div class="row">
		<div class="col-10 mx-auto">

			{% for article in article %}

               <a href="{{ path('show_article', {'cat_alias': article.category.alias, 'art_alias': article.alias, 'id': article.id}) }}" class="text-decoration-none text-dark">

                 <div class="card mb-3">
					<div class="row g-0">
						<div class="col-md-4">
							<img src="{{ asset('uploads/') ~ article.photo }}" class="img-fluid rounded-start" alt="...">
						</div>
						<div class="col-md-8">
							<div class="card-body">
								<h5 class="card-title">{{ article.title | capitalize }}</h5>
								<p class="card-text">{{ article.subtitle | capitalize}}</p>
								<p class="card-text">
									<small class="text-muted">Créé le {{ article.createdAt | date('d/m/Y')}}</small>
								</p>
							</div>
						</div>
					</div>
				</div>

               </a>

               

			{% endfor %}

		</div>
	</div>

{% endblock %}
